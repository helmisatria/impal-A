<!DOCTYPE html>
<html>
<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
  <link rel="stylesheet" href="css/data.css">
  <link rel="stylesheet" type="text/css" href="css/sweetalert.css">
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>

<body>
  <div id="header" class="row">
    <div class="col s3">
      <img src="image/pic_pojok.png" id="pic_pojok">
    </div>
    <div class="col s3">
      <div id="welcome" class="valign-wrapper">
        <i id="img-orang" class="material-icons bulet">accessibility</i>
        <span><span id="welcome-text">Selamat Datang,</span> {{user.role}}</span>
      </div>
    </div>
    <div class="col s6">
      <div id="logout-text" class="valign-wrapper right">
        <a href="/logout" style="color: inherit">Logout</a>
      </div>
    </div>
  </div>
  <div class="row">
    <div id="kiri" class="col s3">
      <ul class="collection">
        <li class="collection-item valign-wrapper" id="navigasi">Navigasi</li>
        {{#each navigasi}}
          <a href="{{href}}" style="color: inherit">
            <li class="collection-item valign-wrapper {{class}}">
              <i class="material-icons bulet">{{icon}}</i> {{nama}}
            </li>
          </a>
        {{/each}}
      </ul>
    </div>
    <div id="kanan" class="col s9">
      <div id="header_right" class="valign-wrapper">
        <div class="col s4" id="sub-judul">
          <p>Data Barang</p>
        </div>
        <div class="col s7">
          <div class="input-field valign-wrapper">
            <label class="label-icon" for="search">
              <i class="material-icons" id="search-icon">search</i>
            </label>
            <input id="search" type="search" onkeyup="searchTable()" placeholder="Cari data barang" required>
            <i class="material-icons" id="close-icon" onclick="clearInput()">close</i>
          </div>
        </div>
        <div class="col s5">
          <a class="waves-effect btn sm-text-capitalize modal-trigger" href="#cetak-data-barang" id="left-btn">Cetak data barang</a>
        </div>
        <div class="col s7" style="padding-left: 0">
          <a class="waves-effect btn sm-text-capitalize modal-trigger" id="right-btn" href="#modal-new-barang"><i class="material-icons right" id="add-icon">add</i>Tambah data barang</a>
        </div>
      </div>
      <div class="row">
        <table class="bordered striped centered responsive-table" id="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nama Barang</th>
              <th>Stok</th>
              <th>Stok Opname</th>
              <th>Kategori</th>
              <th>Aksi</th>
            </tr>
          </thead>

          <tbody>
            {{#each data}}
            <tr>
              <td class="data_td">{{_id}}</td>
              <td class="data_td">{{nama_barang}} </td>
              <td class="data_td">{{stok}}</td>
              <td class="data_td">{{stok_opname}}</td>
              <td class="data_td">{{kategori}}</td>
              <td class="aksi-icon-padding">
                <a class="modal-trigger cetak_data_barang_trigger" href="#cetak-data-barang"><i class="material-icons aksi-icon">remove_red_eye</i></a>
                <a class="modal-trigger edit_data_barang_trigger" href="#modal-edit-barang"><i class="material-icons aksi-icon">mode_edit</i></a>
                <a class="modal-trigger hapus_data_barang_trigger" href="#modal-delete"><i class="material-icons aksi-icon">delete</i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>


  {{> modal_cetak_data_barang}}

  {{> modal_delete_notification}}

  {{> modal_success_notification}}

  {{> modal_tambah_data_barang}}

  {{> modal_edit_data_barang}}

  <!--Import jQuery before materialize.js-->
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script type="text/javascript" src="js/materialize.min.js"></script>
  <script type="text/javascript" src="js/dashboard.js"></script>
  <script type="text/javascript" src="js/tambah_data_barang.js"></script>
  <script type="text/javascript" src="js/edit_data_barang.js"></script>
  <script type="text/javascript" src="js/cetak_data_barang.js"></script>
  <script type="text/javascript" src="js/hapus_data_barang.js"></script>
  <script type="text/javascript" src="js/sweetalert.min.js"></script>
</body>
</html>
